saveRDS(resultados_modelo_C, file = "resultados_modelo_C_2021_2024.rds")
cat("Guardado: resultados_modelo_C_2021_2024.rds\n")

minmax01 <- function(x) {
  r <- range(x, na.rm = TRUE)
  if (!is.finite(r[1]) || !is.finite(r[2])) return(rep(NA_real_, length(x)))
  if (diff(r) == 0) return(rep(0.5, length(x)))
  (x - r[1]) / diff(r)
}

make_gt_year <- function(year) {
  gt_weekly %>%
    dplyr::filter(
      semana >= first_monday_of_year(year),
      semana <= last_monday_of_year(year)
    ) %>%
    dplyr::transmute(
      semana,
      GT = gt_dengue
    ) %>%
    dplyr::mutate(GT = minmax01(GT))
}

join_gt_comp <- function(year, comp_df) {
  exog <- make_gt_year(year)
  
  comp_df %>%
    dplyr::filter(
      semana >= first_monday_of_year(year),
      semana <= last_monday_of_year(year)
    ) %>%
    dplyr::transmute(
      semana,
      Obs  = casos_reales,
      Pred = casos_predichos
    ) %>%
    dplyr::mutate(
      Obs  = minmax01(Obs),
      Pred = minmax01(Pred)
    ) %>%
    dplyr::left_join(exog, by = "semana")
}

plot_gt_only <- function(year, titulo = "Índice de Google Trends (normalizado 0–1)") {
  df <- make_gt_year(year)
  
  ggplot(df, aes(semana, GT)) +
    geom_line(linewidth = 0.6, color = "darkred") +
    labs(
      title = paste0(titulo, " - Dengue (", year, ")"),
      x = "Semana (lunes)",
      y = "Escala normalizada (0–1)"
    ) +
    theme_minimal() +
    theme(plot.title = element_text(hjust = 0.5))
}

plot_gt_vs_obs <- function(year, comp_df,
                           titulo = "Google Trends vs casos observados (0–1)") {
  df <- join_gt_comp(year, comp_df) %>%
    tidyr::pivot_longer(cols = c(GT, Obs),
                        names_to = "serie",
                        values_to = "valor")
  
  ggplot(df, aes(semana, valor, color = serie, linetype = serie)) +
    geom_line(linewidth = 0.6) +
    scale_color_manual(
      values = c(Obs = "black", GT = "darkred"),
      breaks = c("Obs","GT"),
      labels = c("Observados", "Google Trends"),
      name   = "Serie"
    ) +
    scale_linetype_manual(
      values = c(Obs = "solid", GT = "dashed"),
      breaks = c("Obs","GT"),
      labels = c("Observados", "Google Trends"),
      name   = "Serie"
    ) +
    labs(
      title = paste0(titulo, " (", year, ")"),
      x = "Semana (lunes)",
      y = "Escala normalizada (0–1)"
    ) +
    theme_minimal() +
    theme(
      legend.position = "bottom",
      plot.title = element_text(hjust = 0.5)
    )
}

plot_gt_vs_pred <- function(year, comp_df,
                            titulo = "Google Trends vs casos predichos (0–1)") {
  df <- join_gt_comp(year, comp_df) %>%
    tidyr::pivot_longer(cols = c(GT, Pred),
                        names_to = "serie",
                        values_to = "valor")
  
  ggplot(df, aes(semana, valor, color = serie, linetype = serie)) +
    geom_line(linewidth = 0.6) +
    scale_color_manual(
      values = c(Pred = "darkblue", GT = "darkred"),
      breaks = c("Pred","GT"),
      labels = c("Predichos", "Google Trends"),
      name   = "Serie"
    ) +
    scale_linetype_manual(
      values = c(Pred = "dashed", GT = "solid"),
      breaks = c("Pred","GT"),
      labels = c("Predichos", "Google Trends"),
      name   = "Serie"
    ) +
    labs(
      title = paste0(titulo, " (", year, ")"),
      x = "Semana (lunes)",
      y = "Escala normalizada (0–1)"
    ) +
    theme_minimal() +
    theme(
      legend.position = "bottom",
      plot.title = element_text(hjust = 0.5)
    )
}

plot_gt_vs_both <- function(year, comp_df,
                            titulo = "Observados y predichos vs Google Trends (0–1)") {
  df <- join_gt_comp(year, comp_df) %>%
    tidyr::pivot_longer(cols = c(Obs, Pred, GT),
                        names_to = "serie",
                        values_to = "valor")
  
  ggplot(df, aes(semana, valor, color = serie, linetype = serie)) +
    geom_line(linewidth = 0.6) +
    scale_color_manual(
      values = c(Obs = "black", Pred = "darkblue", GT = "darkred"),
      breaks = c("Obs","Pred","GT"),
      labels = c("Observados", "Predichos", "Google Trends"),
      name   = "Serie"
    ) +
    scale_linetype_manual(
      values = c(Obs = "solid", Pred = "dashed", GT = "solid"),
      breaks = c("Obs","Pred","GT"),
      labels = c("Observados", "Predichos", "Google Trends"),
      name   = "Serie"
    ) +
    labs(
      title = paste0(titulo, " (", year, ")"),
      x = "Semana (lunes)",
      y = "Escala normalizada (0–1)"
    ) +
    theme_minimal() +
    theme(
      legend.position = "bottom",
      plot.title = element_text(hjust = 0.5)
    )
}

plot_gt_all_for_year <- function(year, comp_df) {
  print(plot_gt_only(year))
  print(plot_gt_vs_obs(year,  comp_df))
  print(plot_gt_vs_pred(year, comp_df))
  print(plot_gt_vs_both(year, comp_df))
}

plot_gt_all_for_year(2021, comparacionC_2021)
plot_gt_all_for_year(2022, comparacionC_2022)
plot_gt_all_for_year(2023, comparacionC_2023)
plot_gt_all_for_year(2024, comparacionC_2024)
