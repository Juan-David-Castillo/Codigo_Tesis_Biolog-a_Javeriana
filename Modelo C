  comparacionC_2021 %>% dplyr::mutate(Anio = 2021, Modelo = "C"),
  comparacionC_2022 %>% dplyr::mutate(Anio = 2022, Modelo = "C"),
  comparacionC_2023 %>% dplyr::mutate(Anio = 2023, Modelo = "C"),
  comparacionC_2024 %>% dplyr::mutate(Anio = 2024, Modelo = "C")
) %>%
  dplyr::select(
    Anio, Modelo, semana,
    casos_reales,
